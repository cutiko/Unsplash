<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotosActivity"
    android:id="@+id/photosCl">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/unsplashRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/unsplash_rv_margin"
        android:layout_marginTop="@dimen/unsplash_rv_margin"
        android:layout_marginEnd="@dimen/unsplash_rv_margin"
        android:layout_marginBottom="@dimen/unsplash_rv_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:indeterminate="true"
        android:layout_marginStart="@dimen/unsplash_rv_margin"
        android:layout_marginEnd="@dimen/unsplash_rv_margin"
        android:id="@+id/loadingPb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unsplashRv" />


</androidx.constraintlayout.widget.ConstraintLayout>